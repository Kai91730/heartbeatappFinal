<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bmi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfd2bd"
    tools:context="com.example.user.heartbeatapp.BMIActivity">

    <EditText
        android:layout_width="274dp"
        android:layout_height="48dp"
        android:textSize="20dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/height"
        android:hint="請輸入身高(cm)"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <EditText
        android:layout_width="274dp"
        android:layout_height="48dp"
        android:textSize="20dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/weight"
        android:hint="請輸入體重(kg)"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/height"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <Button
        android:text="計算"
        android:textSize="20dp"
        android:layout_width="98dp"
        android:layout_height="51dp"
        android:id="@+id/culcalate"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_style"/>

    <Button
        android:text="清除"
        android:textSize="20dp"
        android:layout_width="98dp"
        android:layout_height="51dp"
        android:id="@+id/clear"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_style"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="334dp"
        android:layout_height="125dp"
        android:layout_marginBottom="148dp"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:textColor="#f9222f"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="身高:"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="60dp"
        android:layout_height="38dp"
        android:textSize="25dp"
        android:id="@+id/textView3"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="體重:"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="60dp"
        android:textSize="25dp"
        android:id="@+id/textView4"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toLeftOf="@+id/weight"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="38dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.11" />


</android.support.constraint.ConstraintLayout>
